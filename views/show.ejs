<% include ./partials/header %>

<div class="ui padded container segment">
  <h3><%= blog.title %></h3>
  <p class="date"><%= blog.created.toDateString() %></p>
  <img class="ui medium image" src="<%= blog.image %>">
  <p><strong>Writer:</strong><%= blog.writer %> <strong>Artist:</strong> <%= blog.artist %></p>
  <div class="description">
    <p><%- blog.body %></p>
  <a href = "/blogs/<%= blog._id %>/edit" class="ui blue button">Edit</a>
  <form action = "/blogs/<%= blog._id %>?_method=DELETE" method = "POST" id = "delete" class="ui form">
  <button class="ui yellow button">Delete</button>
</div>

<% include ./partials/footer %>
